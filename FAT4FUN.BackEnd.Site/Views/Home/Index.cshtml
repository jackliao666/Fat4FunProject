@model IEnumerable<FAT4FUN.BackEnd.Site.Models.ViewModels.OrderVm>
@using Newtonsoft.Json

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Fat4Fun</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        @{
            // 取得當前月份名稱
            var currentMonth = DateTime.Now.ToString("MM");
            var currentYear = DateTime.Now.ToString("yyyy");

        }
        <!-- 當月收入 -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <h4>@currentMonth 月收入</h4>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$ @(ViewBag.TotalCompletedOrderAmount.ToString("N0"))</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- 當年收入 -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <h4>@currentYear 年度總收入</h4>
                                業績達成率: @(ViewBag.SalesAchievementRate.ToString("F")) %
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                $ @(ViewBag.TotalAnnualCompletedOrderAmount.ToString("N0"))

                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 訂單處理 -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center" id="unprocessed-order">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-uppercase mb-1">
                                未處理訂單
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @if (ViewBag.PendingOrdersCount > 0)
                                {
                                    @(ViewBag.PendingOrdersCount)
                                }
                                else
                                {
                                    <span class="text-danger">無未處理訂單</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hourglass-start fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row no-gutters align-items-center" id="returning-order">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-uppercase mb-1">
                                退貨處理中
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @if (ViewBag.ReturningOrdersCount > 0)
                                {
                                    @(ViewBag.ReturningOrdersCount)
                                }
                                else
                                {
                                    <span class="text-danger">無退貨處理中</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-undo-alt fa-2x text-gray-300"></i>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Content Row -->

    <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">每月收入彙總</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval")
        <script src="https://cdn.jsdelivr.net/npm/vue@3"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <!-- Page level plugins -->
        <script src="~/Scripts/vendor/chart.js/Chart.min.js"></script>

        <script>
            $(document).ready(function () {
                // 點擊未處理訂單
                $('#unprocessed-order').click(function () {
                    // 跳轉到訂單管理頁面，狀態設置為 1
                    window.location.href = "/Orders?searchStatus=1";
                });

                // 點擊退貨處理中
                $('#returning-order').click(function () {
                    // 跳轉到訂單管理頁面，狀態設置為 4
                    window.location.href = "/Orders?searchStatus=4";;
                });
            });
        </script>
        <script>
    $(document).ready(function() {
        // 獲取每月收入數據
        var monthlyData = @Html.Raw(ViewBag.MonthlyCompletedOrderAmountsJson);

        // 繪製圖表
        var ctx = document.getElementById("myAreaChart").getContext("2d");
        var myAreaChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["1月", "2月", "3月", "4月", "5月", "6月", "7月", "8月", "9月", "10月", "11月", "12月"],
                datasets: [{
                    label: "每月收入",
                    lineTension: 0.3,
                    backgroundColor: "rgba(78, 115, 223, 0.05)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    pointRadius: 3,
                    pointBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointBorderColor: "rgba(255, 255, 255, 0.8)",
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointHitRadius: 50,
                    pointBorderWidth: 2,
                    data: monthlyData,
                }]
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'month'
                        },
                        gridLines: {
                            display: false,
                            drawBorder: false
                        },
                       
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            
                            maxTicksLimit: 10,
                            padding: 10,
                            callback: function (value, index, values) {
                                return '$' + value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); // 格式化貨幣
                            }
                        },
                        
                    }],

                    legend: {
                        display: true
                    },
                    x: {
                        title: {
                            display: true,
                            text: '月份'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: '收入 (NTD)'
                        },
                        ticks: {
                            beginAtZero: true
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true
                    }
                },
                tooltips: {
                    titleMarginBottom: 10,
                    titleFontColor: '#6e707e',
                    titleFontSize: 14,
                    backgroundColor: "rgba(255,255,255,1)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                    callbacks: {
                        label: function (tooltipItem, data) {
                            return data.datasets[tooltipItem.datasetIndex].label + ': $' + tooltipItem.yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        }
                    }
                },
            }
        });
    });
        </script>



    }
