@model FAT4FUN.BackEnd.Site.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    /* 背景美化 */
    .custom-bg {
        background: linear-gradient(135deg, #92a8b3 0%, #557c8e 100%);
    }

    /* 卡片美化 */
    .custom-card {
        border-radius: 15px;
        background-color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* 输入框美化 */
    .custom-input {
        border: 1px solid #ced4da;
        border-radius: 10px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
            outline: none;
        }

    /* 按钮美化 */
    .custom-btn {
        background-color: #007bff;
        border: none;
        padding: 12px;
        border-radius: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>
<div class="d-flex justify-content-center align-items-center vh-100 custom-bg">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card p-5 shadow-lg custom-card">
            <h4 class="text-center mb-4">使用者登入</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control custom-input", placeholder = "請輸入帳號" } })
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control custom-input", placeholder = "請輸入密碼", type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary custom-btn">登入</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
