@model FAT4FUN.BackEnd.Site.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "Login";
}





<div class="d-flex justify-content-center align-items-center" style="height: 100vh; background: #92a8b3 " >

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card p-4 shadow-sm" style="width: 500px;">
            <h4 class="text-center mb-4">使用者登入</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label col-md-2" })
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

            </div>

            <div class="mb-3 ">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label col-md-2" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="登入" class="btn btn-outline-primary" />
            </div>
        </div>
    }

</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


